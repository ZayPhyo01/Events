<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_medium_3"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/imv_event_follow_up_image"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_width="@dimen/event_follow_up_image"
        android:layout_height="@dimen/event_follow_up_image"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            android:src="@drawable/event" />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_event_follow_up_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imv_event_follow_up_image"
        android:text="35mm The DARK CRYSTAL Matinee at the Vista,Los Feliz"
        android:textColor="#000"
        android:layout_marginBottom="@dimen/margin_medium"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_event_follow_up_header"
        android:layout_toRightOf="@id/imv_event_follow_up_image"
        android:textColor="@color/secondary_text_color"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Sun,Feb 23 - 11:00 am GMT -08:00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on Vista Theratre"
        android:textColor="@color/secondary_text_color"
        android:id="@+id/event_follow_up_place"
        android:layout_toRightOf="@id/imv_event_follow_up_image"
        android:layout_below="@id/tv_event_time"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignBottom="@id/event_follow_up_place"
        android:foreground="@drawable/ripple"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_alignParentRight="true"


        />

</RelativeLayout>